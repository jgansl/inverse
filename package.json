{
   "name": "inverse",
   "version": "0.1.0",
   "private": true,
   "engines": {
      "node": ">=18.17.0"
   },
   "scripts": {
      "format": "prettier --write .",
      "build": "next build",
      "dev": "next dev",
      "lint": "next lint --fix",
      "prettier": "prettier --write .",
      "prepare": "husky",
      "postinstall": "echo prepare",
      "start": "next start"
   },
   "dependencies": {
      "appwrite": "^15.0.0",
      "next": "14.2.7",
      "react": "^18",
      "react-dom": "^18"
   },
   "devDependencies": {
      "@types/node": "^20",
      "@types/react": "^18",
      "@types/react-dom": "^18",
      "eslint": "^8.57.0",
      "eslint-config-next": "14.2.7",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.2.1",
      "husky": "^9.1.5",
      "lint-staged": "^15.2.9",
      "postcss": "^8",
      "prettier": "^3.3.3",
      "prettier-plugin-tailwindcss": "^0.6.6",
      "tailwindcss": "^3.4.1",
      "typescript": "^5"
   },
   "lint-staged": {
      "/src/**/*.{js,jsx,ts,tsx}": [
         "npx next lint --fix",
         "npx prettier --write"
      ],
      "*.{json,css,md}": [
         "npx prettier --write"
      ]
   }
}
